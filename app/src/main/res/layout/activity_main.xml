<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:background="@color/main_background"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dim40">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/nanodegree_app"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/gray"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dim30"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_spotify"
                    android:layout_width="@dimen/main_menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dim10"
                    android:background="@color/orange"
                    android:onClick="clickOnBtn"
                    android:drawableLeft="@drawable/spotify"
                    android:text="@string/spotify_btn_label" />

                <Button
                    android:id="@+id/button_scores"
                    android:layout_width="@dimen/main_menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dim10"
                    android:background="@color/orange"
                    android:onClick="clickOnBtn"
                    android:drawableLeft="@drawable/scores"
                    android:text="@string/scores_btn_label" />

                <Button
                    android:id="@+id/button_library"
                    android:layout_width="@dimen/main_menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dim10"
                    android:background="@color/orange"
                    android:drawableLeft="@drawable/library"
                    android:onClick="clickOnBtn"
                    android:text="@string/library_btn_label" />

                <Button
                    android:id="@+id/button_build"
                    android:layout_width="@dimen/main_menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dim10"
                    android:background="@color/orange"
                    android:onClick="clickOnBtn"
                    android:drawableLeft="@drawable/build"
                    android:text="@string/bigger_btn_label" />

                <Button
                    android:id="@+id/button_reader"
                    android:layout_width="@dimen/main_menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/dim10"
                    android:background="@color/orange"
                    android:onClick="clickOnBtn"
                    android:drawableLeft="@drawable/reader"
                    android:text="@string/reader_btn_label" />

                <Button
                    android:id="@+id/button_capstone"
                    android:layout_width="@dimen/main_menu_button_width"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/pink"
                    android:onClick="clickOnBtn"
                    android:text="@string/capstone_btn_label"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
